<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tkw.setting.SettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:padding="6dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_water_setting_intake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
            <TextView
                android:id="@+id/tv_intake_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_intake_title"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline"/>
            <TextView
                android:id="@+id/tv_intake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.goalOfIntake}"
                android:textColor="@color/black"
                android:layout_marginRight="4dp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_intake_title"
                app:layout_constraintLeft_toRightOf="@id/guideline"
                app:layout_constraintRight_toLeftOf="@id/button_intake"
                tools:text="2000ml"/>
            <TextView
                android:id="@+id/button_intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/tv_intake_title"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_water_setting_cup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_water_setting_intake">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
            <TextView
                android:id="@+id/tv_cup_manage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_cup_manage_title"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_cup_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/black"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_cup_manage_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_water_setting_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_water_setting_cup">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
            <TextView
                android:id="@+id/tv_unit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_unit_title"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline3"/>
            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.unit}"
                android:textColor="@color/black"
                android:layout_marginRight="4dp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_unit_title"
                app:layout_constraintLeft_toRightOf="@id/guideline3"
                app:layout_constraintRight_toLeftOf="@id/button_unit"
                tools:text="ml, L"/>
            <TextView
                android:id="@+id/button_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/tv_unit"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>