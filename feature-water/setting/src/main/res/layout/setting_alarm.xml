<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tkw.setting.SettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:padding="6dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
            <TextView
                android:id="@+id/tv_alarm_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_title"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/black"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_alarm_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:id="@+id/tv_alarm_mode_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_mode_title"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_alarm_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.alarmMode}"
                android:textSize="12sp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_alarm_mode_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="주기"/>
            <TextView
                android:id="@+id/tv_alarm_schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_schedule_title"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_alarm_schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.alarmSchedule}"
                android:textSize="12sp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_alarm_schedule_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="일, 월, 화"/>
            <TextView
                android:id="@+id/tv_alarm_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_time_title"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_schedule_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_alarm_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.alarmTime}"
                android:textSize="12sp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_alarm_time_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="오전 08:00 - 오후 11:00"/>
            <TextView
                android:id="@+id/tv_alarm_sound_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_sound_title"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_time_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"/>
            <TextView
                android:id="@+id/tv_alarm_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.alarmRingtone}"
                android:textSize="12sp"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="@id/tv_alarm_sound_title"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="벨소리"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
