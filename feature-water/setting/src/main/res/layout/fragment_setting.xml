<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.tkw.setting.SettingViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_round_rect"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_circle"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_sync"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@id/iv_image"
                    app:layout_constraintBottom_toTopOf="@id/tv_last_sync"
                    app:layout_constraintLeft_toRightOf="@id/iv_image"/>
                <TextView
                    android:id="@+id/tv_last_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_sync"
                    app:layout_constraintBottom_toBottomOf="@id/iv_image"
                    app:layout_constraintLeft_toRightOf="@id/iv_image"/>
                <ImageView
                    android:id="@+id/iv_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sync"
                    android:visibility="gone"
                    app:layout_constraintLeft_toRightOf="@id/tv_last_sync"
                    app:layout_constraintTop_toTopOf="@id/tv_last_sync"
                    app:layout_constraintBottom_toBottomOf="@id/tv_last_sync"/>

                <TextView
                    android:id="@+id/tv_total_intake_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_total_intake"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_image"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_total_intake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.totalIntake)}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_intake_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_total_intake_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_total_intake_title"
                    tools:text="32.65L"/>
                <TextView
                    android:id="@+id/tv_total_achieve_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_total_achieve"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_intake_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_total_achieve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.totalAchieve)}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_achieve_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_total_achieve_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_total_achieve_title"
                    tools:text="15일"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_intake_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_intake_setting_title"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_info"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_intake_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_intake_setting_title">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp" />
                <TextView
                    android:id="@+id/tv_intake_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_intake_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline"/>
                <TextView
                    android:id="@+id/tv_intake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.goalOfIntake}"
                    android:textColor="@color/black"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_intake_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline"
                    app:layout_constraintRight_toLeftOf="@id/button_intake"
                    tools:text="2000ml"/>
                <TextView
                    android:id="@+id/button_intake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/tv_intake_title"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_cup_manage_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_cup_manage_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_intake_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline"/>
                <TextView
                    android:id="@+id/tv_cup_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_cup_manage_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_unit_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_unit_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cup_manage_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.unit}"
                    android:textColor="@color/black"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_unit_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline"
                    app:layout_constraintRight_toLeftOf="@id/button_unit"
                    tools:text="ml, L"/>
                <TextView
                    android:id="@+id/button_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/tv_unit"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_alarm_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_alarm_setting_title"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_intake_setting"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_alarm_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_setting_title">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp" />
                <TextView
                    android:id="@+id/tv_alarm_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_alarm_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"/>
                <TextView
                    android:id="@+id/tv_alarm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_alarm_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:id="@+id/tv_alarm_mode_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_alarm_mode_title"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"/>
                <TextView
                    android:id="@+id/tv_alarm_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.alarmMode}"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_alarm_mode_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="주기"/>
                <TextView
                    android:id="@+id/tv_alarm_schedule_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_alarm_schedule_title"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"/>
                <TextView
                    android:id="@+id/tv_alarm_schedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.alarmSchedule}"
                    android:textSize="12sp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_alarm_schedule_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="일, 월, 화"/>
                <TextView
                    android:id="@+id/tv_alarm_time_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_alarm_time_title"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_schedule_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"/>
                <TextView
                    android:id="@+id/tv_alarm_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.alarmTime}"
                    android:textSize="12sp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_alarm_time_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="오전 08:00 - 오후 11:00"/>
                <TextView
                    android:id="@+id/tv_alarm_sound_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_alarm_sound_title"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alarm_time_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline2"/>
                <TextView
                    android:id="@+id/tv_alarm_sound"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.alarmRingtone}"
                    android:textSize="12sp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_alarm_sound_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline2"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="벨소리"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_etc_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_etc_setting_title"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_alarm_setting"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_etc_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_etc_setting_title">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp" />
                <TextView
                    android:id="@+id/tv_language_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_language_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline3"/>
                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.currentLang}"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_language_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline3"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="한국어 >"/>
                <TextView
                    android:id="@+id/tv_advertise_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_advertise_title"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_language_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline3"/>
                <TextView
                    android:id="@+id/tv_advertise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    app:layout_constraintTop_toTopOf="@id/tv_advertise_title"
                    app:layout_constraintLeft_toRightOf="@id/guideline3"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text=">"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_rect"
                android:text="로그아웃"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/cl_etc_setting"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>