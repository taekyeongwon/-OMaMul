<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioGroup
        android:id="@+id/rg_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <RadioButton
            android:id="@+id/rb_ko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/radio_selector"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="@string/lang_ko"/>
        <RadioButton
            android:id="@+id/rb_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/radio_selector"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="@string/lang_en"/>
        <RadioButton
            android:id="@+id/rb_jp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/radio_selector"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="@string/lang_jp"/>
        <RadioButton
            android:id="@+id/rb_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/radio_selector"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="@string/lang_cn"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_language_restart_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/rg_language"/>
</androidx.constraintlayout.widget.ConstraintLayout>