<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tkw.setting.SettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_rect"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/account_circle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_sync"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/iv_image"
            app:layout_constraintBottom_toTopOf="@id/tv_last_sync"
            app:layout_constraintLeft_toRightOf="@id/iv_image"/>
        <TextView
            android:id="@+id/tv_last_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_sync"
            app:layout_constraintBottom_toBottomOf="@id/iv_image"
            app:layout_constraintLeft_toRightOf="@id/iv_image"/>
        <ImageView
            android:id="@+id/iv_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sync"
            android:visibility="gone"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toRightOf="@id/tv_last_sync"
            app:layout_constraintTop_toTopOf="@id/tv_last_sync"
            app:layout_constraintBottom_toBottomOf="@id/tv_last_sync"/>

        <TextView
            android:id="@+id/tv_total_intake_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_total_intake"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_total_intake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(viewModel.totalIntake)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@id/tv_total_intake_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_total_intake_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_intake_title"
            tools:text="32.65L"/>
        <TextView
            android:id="@+id/tv_total_achieve_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_total_achieve"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_intake_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_total_achieve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@id/tv_total_achieve_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_total_achieve_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_achieve_title"
            app:prefix="@{viewModel.totalAchieve}"
            app:textRes="@{@string/day}"
            tools:text="15일"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>