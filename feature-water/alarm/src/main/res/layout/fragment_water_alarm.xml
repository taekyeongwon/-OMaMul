<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_alarm_sound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_sound_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_alarm_sound"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_sound_title"
            tools:text="장치 설정"/>

        <TextView
            android:id="@+id/tv_alarm_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_time_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_sound"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_alarm_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_time_title"
            tools:text="오전 8:00 - 오후 11:00"/>

        <TextView
            android:id="@+id/tv_alarm_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_mode_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_time"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_title">
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_alarm_mode_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@string/alarm_mode_period"
                app:src="@drawable/check"/>
            <com.tkw.alarm.custom.AlarmModeView
                android:id="@+id/alarm_period_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_period"
                tools:visibility="visible"/>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/alarm_period_layout"/>
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_alarm_mode_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:text="@string/alarm_mode_custom"
                app:src="@drawable/check"/>
            <com.tkw.alarm.custom.AlarmModeView
                android:id="@+id/alarm_custom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_custom"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_alarm_etc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_etc_setting"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm_mode"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_etc_title">
            <com.tkw.ui.CustomTextSwitchView
                android:id="@+id/tv_alarm_etc_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@string/alarm_etc_stop_reached_goal"/>
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_etc_stop"/>
            <com.tkw.ui.CustomTextSwitchView
                android:id="@+id/tv_alarm_etc_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:text="@string/alarm_etc_delay"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
