<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_alarm_sound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_sound_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_sound_title">
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_alarm_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@string/alarm_sound_device"
                app:src="@drawable/right_arrow"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_alarm_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_mode_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm_sound"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_mode_title">
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_alarm_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/alarm_mode_period"
                app:src="@drawable/right_arrow"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_alarm_etc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_etc_setting"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_alarm_mode"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alarm_etc_title">
            <com.tkw.ui.CustomTextSwitchView
                android:id="@+id/tv_alarm_etc_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@string/alarm_etc_stop_reached_goal"/>
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_etc_stop"/>
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_fullscreen_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:text="@string/alarm_etc_fullscreen_setting"
                app:src="@drawable/right_arrow"/>
            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/tv_fullscreen_setting"/>
            <com.tkw.ui.CustomTextImageView
                android:id="@+id/tv_exact_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:text="@string/alarm_etc_exact_setting"
                app:src="@drawable/right_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
