<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tkw.ui.custom.TextSwitchView
        android:id="@+id/sv_phone_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/alarm_sound_device"
        app:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/sv_phone_setting"/>

    <com.tkw.ui.custom.TextSwitchView
        android:id="@+id/sv_vibe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/alarm_sound_vibe"
        app:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.tkw.ui.custom.TextSwitchView
        android:id="@+id/sv_ringtone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/alarm_sound_ringtone"
        app:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/sv_vibe"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.tkw.ui.custom.TextSwitchView
        android:id="@+id/sv_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/alarm_sound_noti"
        app:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/sv_ringtone"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>