<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_water_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="100"
        android:inputType="number"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/tp_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ml"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/et_water_amount"
        app:layout_constraintBottom_toBottomOf="@id/et_water_amount"
        app:layout_constraintLeft_toRightOf="@id/et_water_amount"/>
    <TimePicker
        android:id="@+id/tp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
