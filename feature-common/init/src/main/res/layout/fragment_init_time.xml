<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/first_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/circle_unselected"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/first_line"/>
    <ImageView
        android:id="@+id/first_line"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/first_icon"
        app:layout_constraintBottom_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toRightOf="@id/first_icon"
        app:layout_constraintRight_toLeftOf="@id/second_icon"/>
    <TextView
        android:id="@+id/second_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:background="@drawable/circle_selected"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/first_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/second_line"/>
    <ImageView
        android:id="@+id/second_line"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/first_icon"
        app:layout_constraintBottom_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toRightOf="@id/second_icon"
        app:layout_constraintRight_toLeftOf="@id/third_icon"/>
    <TextView
        android:id="@+id/third_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/circle_unselected"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/second_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_time_title"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_time_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_time_subtitle"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_time_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_wakeup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wakeup_time"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_wakeup_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rect"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_wakeup_title"
        tools:text="00:00"/>

    <TextView
        android:id="@+id/tv_sleep_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleep_time"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wakeup_time"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_sleep_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rect"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_title"
        tools:text="00:00"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>