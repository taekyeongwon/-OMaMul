<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/first_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/circle_white"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/first_line"/>
    <ImageView
        android:id="@+id/first_line"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/first_icon"
        app:layout_constraintBottom_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toRightOf="@id/first_icon"
        app:layout_constraintRight_toLeftOf="@id/second_icon"/>
    <TextView
        android:id="@+id/second_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:background="@drawable/circle_gray"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/first_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/second_line"/>
    <ImageView
        android:id="@+id/second_line"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/first_icon"
        app:layout_constraintBottom_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toRightOf="@id/second_icon"
        app:layout_constraintRight_toLeftOf="@id/third_icon"/>
    <TextView
        android:id="@+id/third_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/circle_gray"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/second_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_language_title"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/first_icon"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_language"
        android:background="@drawable/rounded_rect"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_language_title">
        <RadioGroup
            android:id="@+id/rg_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
            <RadioButton
                android:id="@+id/rb_ko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/radio_selector"
                android:button="@null"
                android:background="@android:color/transparent"
                android:text="@string/lang_ko"/>
            <RadioButton
                android:id="@+id/rb_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/radio_selector"
                android:button="@null"
                android:background="@android:color/transparent"
                android:text="@string/lang_en"/>
            <RadioButton
                android:id="@+id/rb_jp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/radio_selector"
                android:button="@null"
                android:background="@android:color/transparent"
                android:text="@string/lang_jp"/>
            <RadioButton
                android:id="@+id/rb_cn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/radio_selector"
                android:button="@null"
                android:background="@android:color/transparent"
                android:text="@string/lang_cn"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>